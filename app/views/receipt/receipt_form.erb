<center>
  <form action="/receipts" method="POST">
    <input type="text" name="receipt[title]" placeholder="Title"><br><br>
    <input type="text" name="receipt[content]" placeholder="Content"><br><br>
    <input type="text" name="receipt[url]" placeholder="URL"><br><br>
    <select name="category[category_id]">
      <% @categories.each do |category| %>
        <option value="<%= category.id %>"> <%=category.title %></option>
      <% end %>
    </select><br><br>
    <input type="submit" value="Add">
  </form>
